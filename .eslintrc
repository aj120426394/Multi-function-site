

{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true,
    "es6": true
  },
  "globals" : {
    __DEV_TOOLS__: true
  },
  "rules": {
    "new-cap": 0,
    "valid-jsdoc": 2,

    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-indent": 0,
    "react/prefer-stateless-function": 0,

    // Disable until Flow supports let and const
    "no-var": 0,
    "vars-on-top": 0,
    "max-len": 0,


    // Disable comma-dangle unless need to support it
    "comma-dangle": 0,
    "id-length": 0,

    // Indent
    "indent": ["error", 2, { "SwitchCase": 1 }]
  },
  "plugins": [
    "react"
  ]
}
